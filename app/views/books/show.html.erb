<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render "users/user_info", user: @user %>
      <%= render "books/new_book", book_new: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table table-hover table-inverse'>
        <tr>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <%= attachment_image_tag @user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size:"50x50" %>
              <br/>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %>
              <%= @book.title %>
            <% end %>
          </td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(@book), method: :delete do %>
                <i class="fas fa-heart"></i><%= @book.favorites.count %>
              <% end %>
            <% else %>
              <%= link_to book_favorites_path(@book), method: :post do %>
                <i class="far fa-heart"></i><%= @book.favorites.count %>
              <% end %>
            <% end %>
          </td>
          <td>コメント数: <%= @book.book_comments.count %></td>

          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm": "本当に消しますか？", class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
      <div>
        <% @book.book_comments.each do |book_comment| %>
          <p>
            <%= link_to user_path(book_comment.user.id) do %>
              <%= attachment_image_tag book_comment.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size:"50x50" %>
            <% end %>
            <%= book_comment.comment %>
            <% if book_comment.user == current_user %>
              <%= link_to "Destroy", book_book_comment_path(@book.id, book_comment), method: :delete, class: "btn btn-danger" %>
            <% end %>
            <br/>
            <%= link_to (book_comment.user.name), user_path(book_comment.user.id) %>
          </p>
        <% end %>
      </div>
      <div>
        <%= form_with(model:[@book, @book_comment_new], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに", class:"form-control" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
