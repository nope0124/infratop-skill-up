<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Followings</th>
      <th>Followers</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% user_all.each do |user| %>
      <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size:"50x50" %>
        </td>
        <td>
          <%= link_to user.name, user_path(user.id) %>
        </td>
        <td>
          <%= link_to "フォロー数:"+ user.followings.count.to_s, user_followings_path(user_id: user.id) %>
        </td>
        <td>
          <%= link_to "フォロワー数:"+ user.followers.count.to_s, user_followers_path(user_id: user.id) %>
        </td>
        <td>
          <td>
            <% if current_user != user %>
              <% if current_user.following?(user) %>
                <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
              <% else %>
                <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
              <% end %>
            <% end %>
          </td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>